<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.ChatMain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    <!-- Fixed header -->
    <LinearLayout
        android:id="@+id/message_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6666"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Messenger"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Add other header elements here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/all_message_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="All message"
                android:textColor="@android:color/black"
                android:background=""
                android:minHeight="48dp"
                android:minWidth="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

            <Button
                android:id="@+id/read_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Read"
                android:textColor="@android:color/black"
                android:background=""
                android:minHeight="48dp"
                android:minWidth="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

            <Button
                android:id="@+id/unread_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Unread"
                android:textColor="@android:color/black"
                android:background=""
                android:minHeight="48dp"
                android:minWidth="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_menu_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CardView layout cho từng phần tử trong RecyclerView -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
