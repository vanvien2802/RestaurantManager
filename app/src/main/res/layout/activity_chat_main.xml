<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.ChatMain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    <!-- Fixed header -->
    <LinearLayout
        android:id="@+id/message_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnBackMessager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#EEEEEE"
                android:clickable="true"
                app:maxImageSize="30dp"
                android:gravity="end"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Messenges"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>


        <!-- Add other header elements here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/all_message_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All message"
                android:textColor="@android:color/black"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:textAllCaps="false"/>


            <Button
                android:id="@+id/read_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Read"
                android:textColor="#666666"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/unread_button"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Unread"
                android:textColor="#666666"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:textAllCaps="false"/>

        </LinearLayout>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:background="#FFFFFF"
        android:id="@+id/chat_menu_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CardView layout cho từng phần tử trong RecyclerView -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
